# OpenStack 인증 정보 파일 경로
credentials_file_path = "./credentials.json"

# 네트워크 설정
network_name = "internal-network"
subnet_name  = "internal"
external_network_name = "external"

# 인스턴스 설정
instance_name = "my-instance"
image_uuid    = "12345678-1234-1234-1234-123456789abc"
flavor_id     = "12345678-1234-1234-1234-123456789abc"

# 스토리지 설정
volume_size        = 20
additional_volumes = [10, 20]  # 10GB, 20GB 추가 디스크

# 리소스 설정
region = "RegionOne"
cpu    = 2
memory = 2048

# 보안 그룹
security_group_names = ["default", "web-servers"]

# 사용자 데이터 (선택사항)
user_data_file_path = "./user-data.sh"